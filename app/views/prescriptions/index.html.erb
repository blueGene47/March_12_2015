<p id="notice"><%= notice %></p>

<h1>Listing Prescriptions</h1>

<table>
  <thead>
    <tr>
      <th>Pet name</th>
      <th>Type of pet</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Weight</th>
      <th>Date of last visit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prescriptions.each do |prescription| %>
      <tr>
        <td><%= prescription.pet_name %></td>
        <td><%= prescription.type_of_pet %></td>
        <td><%= prescription.breed %></td>
        <td><%= prescription.age %></td>
        <td><%= prescription.weight %></td>
        <td><%= prescription.date_of_last_visit %></td>
        <td><%= link_to 'Show', prescription %></td>
        <td><%= link_to 'Edit', edit_prescription_path(prescription) %></td>
        <td><%= link_to 'Destroy', prescription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

